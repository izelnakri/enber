<DocsHeader @logo="/images/ember-cli.svg" @repository="https://github.com/izelnakri/mber" as |header|>
  <header.link @route="documentation.index">Documentation</header.link>
</DocsHeader>

<DocsViewer as |viewer|>
  <viewer.navigation as |nav|>
    <nav.title @label="Foundation"/>

    <nav.link @label="Introduction" @route="documentation.index"/>
    <nav.link @label="Color scheme" @route="documentation.color-scheme"/>
    <nav.link @label="Buttons" @route="documentation.buttons"/>

    <nav.title @label="Components"/>
    <nav.link @label="Demo" @route="documentation.components.demo"/>
    <nav.link @label="Header" @route="documentation.components.header"/>
    <nav.link @label="Viewer" @route="documentation.components.viewer"/>
    <nav.link @label="Snippet" @route="documentation.components.snippet"/>
  </viewer.navigation>

  <viewer.page>
    {{outlet}}
  </viewer.page>
</DocsViewer>
