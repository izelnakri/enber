<DocsHeader @logo="/images/ember-cli.svg" @repository="https://github.com/izelnakri/mber" as |header|>
  <header.link @route="documentation.index">Documentation</header.link>
</DocsHeader>

<DocsViewer as |viewer|>
  <viewer.navigation as |nav|>
    <nav.title>Foundation</nav.title>

    <nav.link @route="documentation.index">Introduction</nav.link>
    <nav.link @route="documentation.color-scheme">Color Scheme</nav.link>
    <nav.link @route="documentation.buttons">Buttons</nav.link>

    <nav.title>Components</nav.title>
    <nav.link @route="documentation.components.demo">Demo</nav.link>
    <nav.link @route="documentation.components.header">Header</nav.link>
    <nav.link @route="documentation.components.viewer">Viewer</nav.link>
    <nav.link @route="documentation.components.snippet">Snipper</nav.link>
  </viewer.navigation>

  <viewer.page>
    {{outlet}}
  </viewer.page>
</DocsViewer>
