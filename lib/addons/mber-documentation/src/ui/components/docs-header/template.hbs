<header class="docs-header">
  <DocsHeader::Link @route="documentation">
    {{#if this.logo}}
      <img src="{{this.logo}}" height="33" class="docs-header-logo" />
    {{/if}}
  </DocsHeader::Link>

  <div class="docs-header-links-wrapper">
    {{yield (hash
      link=(component 'docs-header/link')
    )}}

    {{!-- TODO: add search box --}}

    {{#if this.repository}}
      <DocsHeader::Link @href="https://github.com/izelnakri/mber" class="docs-header-repository-link">
        <img src="/images/github.svg" height="25" />
      </DocsHeader::Link>
    {{/if}}

    {{!-- Something to take up space on mobile, so the scrolling nav isn't hugging the edge --}}
  </div>

  {{!-- TODO: if query search results display --}}

  {{!-- NOTE: ommitted version selector on purpose --}}
</header>
